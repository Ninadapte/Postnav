<resources>
    <!-- Base application theme. -->

    <style name="Maintheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#0277BD</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#E91E63</item>
        <item name="android:textColor">#000000</item>
    </style>



    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">#0277BD</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#E91E63</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/spinnerTint</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>